{
  "name": "vspc/support",
  "description": "Flexible helper methods & traits for commonly used functionalities.",
  "keywords": [
    "helper",
    "laravel",
    "support",
    "trants",
    "vspc"
  ],
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Son Tran Thanh",
      "email": "286.trants@gmail.com",
      "homepage": "https://trants.me"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/config": "^11.0",
    "illuminate/mail": "^11.0",
    "illuminate/validation": "^11.0",
    "symfony/translation": "^7.0"
  },
  "require-dev": {
    "mockery/mockery": "^1.6",
    "phpunit/phpunit": "^9.6",
    "vspc/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "cs:check": "./vendor/bin/php-cs-fixer fix --verbose --ansi --show-progress=dots --diff --dry-run",
    "cs:fix": "./vendor/bin/php-cs-fixer fix --verbose --ansi --show-progress=dots",
    "test": "./vendor/bin/phpunit --verbose --colors=always"
  },
  "autoload": {
    "psr-4": {
      "Vspc\\Support\\": "src"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.0.x-dev"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
